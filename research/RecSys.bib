@inproceedings{10.1145/3640457.3688102,
author = {Ungruh, Robin and Dinnissen, Karlijn and Volk, Anja and Pera, Maria Soledad and Hauptmann, Hanna},
title = {Putting Popularity Bias Mitigation to the Test: A User-Centric Evaluation in Music Recommenders},
