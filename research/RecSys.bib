keywords = {Feature Interaction Models, Online Ad Installation Forecasting, Recommender Systems},
location = {Singapore, Singapore},
series = {RecSysChallenge '23}
}

@inproceedings{10.1145/2645710.2653361,
author = {Christakopoulou, Evangelia},
title = {Moving beyond linearity and independence in top-N recommender systems},
year = {2014},
isbn = {9781450326681},
