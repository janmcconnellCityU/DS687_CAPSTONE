abstract = {In this paper we describe our approach to solve RecSys Challenge 2014. The challenge is to rank user's auto generated IMDB rating tweets by their favorited and shared count. Our approach is to formulate this as a ranking problem. We treat a single user as a query and all of the known tweets are treated as matching documents. We then apply various learning to rank approaches and pick the best performing.},
booktitle = {Proceedings of the 2014 Recommender Systems Challenge},
